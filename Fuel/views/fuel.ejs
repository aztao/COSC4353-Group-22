<body>
<div class="container-fluid">
    <header class="row">
        <div class="col-12 bg-danger">
            <div class="customdiv">
                <h1>Fuel Quote Form</h1>
            </div>
       </div>
    </header>
</div>

<%- include('partials/navbar'); %>

<section id="fuel-section">
    <div class="container">
        <div class="row">
            <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto form">
                <br>
                <div class="jumbotron">
                    <h2 class="text-center">Quotation</h2><br>
                    <form action="/fuel" method="POST">
                        <label for="Gallons">Gallons Requested: </label>
                        <input type="number" class="form-control checkboth" id="Gallons" placeholder="Enter Gallons (number only)" name="Gallons" min="0" required><br>

                        <label for="DelAdd">Delivery Address: </label>
                        <input type="text" class="form-control-plaintext" id="DelAdd" name="deladds" value="<%=DelAddress%>" readonly><br>

                        <label for="DelDate">Delivery Date: </label>
                        <input type="date" class="form-control checkboth" id="DelDate" name="DelDate" placeholder="Choose Delivery Date"><br>

                        <label for="Price">Suggested Price / Gallon: </label>
                        <input type="text" class="form-control-plaintext" id="Price" name="suggestedprice" value="0" readonly><br>

                        <label for="Total">Total Amount Due: </label>
                        <input type="text" class="form-control-plaintext" id="Total" name="total" value="0" readonly><br>

                        <div class="text-center">
                            <button type="button" class="btn btn-secondary" id="getquota">Get Quote</button>
                            <button type="submit" class="btn btn-primary" id="submitquota">Submit Quote</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<span id='userState' hidden>
    <%= JSON.stringify(USState); %>
</span>
<span id='userRequest' hidden>
    <%= JSON.stringify(prevReq); %>
</span>

<script type="text/javascript" src="/js/fuel.js"></script>

<%- include('partials/footer'); %>