    <div class="row">
        <div class="col-lg-6">
            <div class="customform">
                <br>
                <div style="height: 20px">
                    <form action="/fuel" method="POST">
                        <label for="Gallons">Gallons Requested: </label>
                        <input type="number" class="form-control" id="Gallons" placeholder="Enter Gallons (number only)" name="Gallons" value="0" min="0" required><br>

                        <label for="DelAdd">Delivery Address: </label>
                        <input type="text" class="form-control" id="DelAdd" name="deladds" value="<%=DelAddress%>" readonly><br>

                        <label for="DelDate">Delivery Date: </label>
                        <input type="date" class="form-control" id="DelDate" placeholder="Choose Delivery Date"><br>

                        <label for="Price">Suggested Price / Gallon: </label>
                        <input type="text" class="form-control" id="Price" name="suggestedprice" value="20" readonly><br>

                        <label for="Total">Total Amount Due: </label>
                        <input type="text" class="form-control" id="Total" name="total" value="100" readonly><br>

                        <button type="button" class="btn btn-secondary" id="getquota" onclick="getQuota();">Get Quote</button>
                        <button type="submit" class="btn btn-primary" id="submitquota">Submit Quote</button>
